{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active files",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "client.c",
                "modbusAP.c",
                "modbusTCP.c",
                "-o",
                "output" // Change the output file name as needed
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to compile multiple C source files."
        }
    ],
    "version": "2.0.0"
}